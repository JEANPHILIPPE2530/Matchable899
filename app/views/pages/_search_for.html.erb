  <% if @user.role == "developer" %>
    <div class="fade-in">
      <h1 class="welcome-h1">Hello, <%= @developer.first_name %>!</h1>
      <div class="welcome-photo">
        <% if @developer.photo.attached? %>
          <%= cl_image_tag @developer.photo.key, height: 200 %>
        <% end %>
      </div>
      <%= link_to "Browse companies", companies_path, class: "choice-button" %>
      <%# <%= link_to "View my matches", company_matches_path, class: "choice-button" %>
    </div>
  <% elsif @user.role == "company" %>
    <div class="fade-in">
      <h1 class="welcome-h1">Welcome, <%= @company.name %>!</h1>
      <div class="welcome-photo">
        <% if @company.photo.attached? %>
          <%= cl_image_tag @company.photo.key, height: 200 %>
        <% end %>
      </div>
      <%= link_to "Browse developers", developers_path, class: "choice-button" %>
    </div>
  <% end %>
